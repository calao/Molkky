<html t:type="layout" title="Equipe"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<fieldset>

    <legend>${message:addEquipe}</legend>
    <t:form t:id="addEquipeForm" class="equipeForm">
        <t:errors/>
        <table>
            <tr>
                <td class="center">
                    <t:label for="numeroEquipe">${message:numeroEquipe}</t:label>
                </td>
                <td class="center">
                    <t:label for="membre1">${message:membre1}</t:label>
                </td>
                <td class="center">
                    <t:label for="membre2">${message:membre2}</t:label>
                </td>
                <td/>
            </tr>
            <tr>
                <td class="center">
                    <t:textfield t:id="numeroEquipe" style="width:10px" value="numeroEquipe"/>
                </td>
                <td class="center">
                    <t:select t:id="membre1" blankOption="never" t:value="selectedMembre1" t:model="membreSelectModel"
                            />
                </td>
                <td class="center">
                    <t:select t:id="membre2" blankOption="never" t:value="selectedMembre2" t:model="membreSelectModel"
                            />
                </td>
                <td class="center">
                    <t:submit value="${message:submit}"/>
                </td>
            </tr>
        </table>

    </t:form>
    <br/>
</fieldset>

<br/>

<t:zone t:id="zone">

    <t:jquery.datatable t:model="equipeModel" t:source="equipesList" t:row="currentEquipe">
        <p:membre1Cell>
            ${currentEquipe.membre1.label}
        </p:membre1Cell>
        <p:membre2Cell>
            ${currentEquipe.membre2.label}
        </p:membre2Cell>
        <p:deleteCell>
            <t:actionlink t:id="delete" id="delete" context="currentEquipe.idEquipe">${message:delete}</t:actionlink>
        </p:deleteCell>
    </t:jquery.datatable>
    <br/>

    <form t:id="paramRandomForm">
      <t:label for="numOfTerrain"/>  <t:textfield t:id="numOfTerrain" value="numOfTerrain" onkeyup="submit()"/>
    </form>
    <t:jquery.dialogAjaxLink t:id="randomize" id="randomize" t:zone="randomListZone" t:dialog="randomizeEquipe">Générer
        grille
        alléatoire
    </t:jquery.dialogAjaxLink>
</t:zone>


<t:jquery.dialog t:clientId="randomizeEquipe" params="params">

    <t:zone t:id="randomListZone" id="randomListZone">
        <t:loop source="randomTerrainsList" index="index" value="randomEquipeList">
            Terrain ${index}
            <t:grid source="randomEquipeList" row="currentEquipe" model="equipeRandomModel">
                <p:membre1Cell>
                    ${currentEquipe.membre1.label}
                </p:membre1Cell>
                <p:membre2Cell>
                    ${currentEquipe.membre2.label}
                </p:membre2Cell>
            </t:grid>
            <br />
        </t:loop>
    </t:zone>
</t:jquery.dialog>


<p:sidebar>
    <p>
        ${message:bienvenue}
    </p>
</p:sidebar>

</html>
