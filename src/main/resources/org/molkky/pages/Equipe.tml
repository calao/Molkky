<html t:type="layout" title="Equipe"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<fieldset>
    <script>

        $(document).ready(function() { var id1 = document.getElementsByName("membre1")[0].id; var id2 = document.getElementsByName("membre2")[0].id;  $("#"+id1).select2(); $("#"+id2).select2();});
    </script>
    <legend>${message:addEquipe}</legend>
    <t:zone t:id="membre2Zone">
    <t:form t:id="addEquipeForm" class="equipeForm">
        <t:errors/>
        <table>
            <tr>
                <td class="center">
                    <t:label for="numeroEquipe">${message:numeroEquipe}</t:label>
                </td>
                <td class="center">
                    <t:label for="membre1">${message:membre1}</t:label>
                </td>
                <td class="center">
                    <t:label for="membre2">${message:membre2}</t:label>
                </td>
                <td/>
            </tr>
            <tr>
                <td class="center">
                    <t:textfield t:id="numeroEquipe" style="width:30px" value="numeroEquipe"/>
                </td>

                <td class="center">
                    <t:select style="width:250px" t:id="membre1" id ="membre1" zone="membre2Zone" t:value="selectedMembre1" t:model="membre1SelectModel"
                            />
                </td>
                <td class="center">
                    <t:select style="width:250px" t:id="membre2"  id ="membre2"  t:value="selectedMembre2" t:model="membre2SelectModel"
                            />
                </td>

                <td class="center">
                    <t:submit value="${message:submit}"/>
                </td>
            </tr>
        </table>

    </t:form>
    </t:zone>
    <br/>
</fieldset>

<br/>

<t:zone t:id="zone">

    <t:jquery.datatable t:model="equipeModel" t:source="equipesList" t:row="currentEquipe">
        <p:membre1Cell>
            ${currentEquipe.membre1.label}
        </p:membre1Cell>
        <p:membre2Cell>
            ${currentEquipe.membre2.label}
        </p:membre2Cell>
        <p:deleteCell>
            <t:actionlink t:id="delete"  class="delete" title="${message:delete}" id="delete" context="currentEquipe.idEquipe"></t:actionlink>
        </p:deleteCell>
    </t:jquery.datatable>
    <br/>

    <form t:id="paramRandomForm">
      <t:label for="numOfTerrain"/>  <t:textfield t:id="numOfTerrain" class="num" value="numOfTerrain" onkeyup="submit()"/>
      <t:jquery.dialogAjaxLink t:id="randomize"  class="button" id="randomize" t:zone="randomListZone" t:dialog="randomizeEquipe">Générer
            grille
            alléatoire
      </t:jquery.dialogAjaxLink>
    </form>

</t:zone>


<t:jquery.dialog t:clientId="randomizeEquipe" params="params">

    <t:zone t:id="randomListZone" id="randomListZone">
        <t:loop source="randomTerrainsList" index="index" value="randomEquipeList">
            Terrain ${index}
            <t:grid source="randomEquipeList" row="currentEquipe" model="equipeRandomModel">
                <p:membre1Cell>
                    ${currentEquipe.membre1.label}
                </p:membre1Cell>
                <p:membre2Cell>
                    ${currentEquipe.membre2.label}
                </p:membre2Cell>
            </t:grid>
            <br />
        </t:loop>
    </t:zone>
</t:jquery.dialog>


<p:sidebar>
    <p>
        ${message:bienvenue}
    </p>
</p:sidebar>

</html>
